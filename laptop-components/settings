fancy_echo "Updating Mac OSX settings..."

less_fancy_echo "...setting computer and hostnames..."
sudo scutil --set ComputerName CDV-Air
sudo scutil --set HostName CDV-Air.local
sudo scutil --set LocalHostName CDV-Air

less_fancy_echo "...requiring password immediately after screen saver or sleep..."
defaults write com.apple.screensaver askForPassword -int 1
defaults write com.apple.screensaver askForPasswordDelay -int 0

less_fancy_echo "...making keyboard fast. Speeding up key repeats and disabling press and hold..."
defaults write -g ApplePressAndHoldEnabled -bool false
defaults write -g InitialKeyRepeat -int 10
defaults write -g KeyRepeat -int 1

less_fancy_echo "...enabling dock autohide and making icons a little smaller than default..."
defaults write com.apple.dock autohide -bool true
defaults write com.apple.dock tilesize -int 48
killall Dock

less_fancy_echo "...enabling 'Tap-to-click' for trackpad..."
defaults -currentHost write -g com.apple.mouse.tapBehavior -int 1

less_fancy_echo "...enabling 'Three Finger Drag' for trackpad..."
defaults -currentHost write -g com.apple.trackpad.threeFingerDragGesture -bool true

less_fancy_echo "...disabling 'Scroll direction: natural'..."
defaults write -g com.apple.swipescrolldirection -bool false

less_fancy_echo "...setting default terminal profile to 'Pro'..."
defaults write com.apple.Terminal "Default Window Settings" -string "Pro"
defaults write com.apple.Terminal "Startup Window Settings" -string "Pro"

